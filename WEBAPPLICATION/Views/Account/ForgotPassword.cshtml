@model WEBAPPLICATION.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot your password?";
}

<style>
    .forgot-password-container {
        max-width: 500px; /* Maximum width for the container */
        margin: 50px auto; /* Center the container horizontally with margin */
        padding: 20px; /* Add padding inside the container */
        border: 1px solid #ddd; /* Light gray border */
        border-radius: 8px; /* Slightly rounded corners */
        background-color: #fff; /* White background */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Subtle shadow */
        text-align: center; /* Center text inside container */
    }

        .forgot-password-container h2 {
            margin-bottom: 20px; /* Margin below the title */
            font-size: 24px; /* Adjust title font size */
            color: #333; /* Dark gray color for the title */
        }

        .forgot-password-container h4 {
            margin-bottom: 20px; /* Margin below the subtitle */
            font-size: 18px; /* Adjust subtitle font size */
            color: #666; /* Medium gray color for the subtitle */
        }

        .forgot-password-container .form-group {
            margin-bottom: 15px; /* Margin below each form group */
            text-align: left; /* Align labels and input fields to the left */
        }

            .forgot-password-container .form-group label {
                font-weight: 600; /* Bold label text */
                display: block; /* Display label as block to ensure it takes full width */
                margin-bottom: 5px; /* Margin below the label */
                color: #333; /* Dark gray color for labels */
            }

        .forgot-password-container .form-control {
            height: 40px; /* Height of input fields */
            font-size: 14px; /* Font size inside input fields */
            border-radius: 4px; /* Rounded corners for input fields */
            border: 1px solid #ccc; /* Light border color */
            text-align: center; /* Center text inside input fields */
        }

        .forgot-password-container .btn {
            background-color: #007bff; /* Primary color for button */
            color: #fff; /* White text color */
            border: none; /* Remove border */
            border-radius: 4px; /* Rounded corners for button */
            padding: 10px 20px; /* Padding inside button */
            font-size: 16px; /* Font size for button text */
            cursor: pointer; /* Pointer cursor on hover */
            transition: background-color 0.3s; /* Smooth background color transition */
        }

            .forgot-password-container .btn:hover {
                background-color: #0056b3; /* Darker shade on hover */
            }
</style>

<div class="forgot-password-container">
    <h2>@ViewBag.Title</h2>
    @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h4>Enter your email.</h4>
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Email Link" />
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

